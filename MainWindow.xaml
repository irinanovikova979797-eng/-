//MainWindow.xaml
<Window x:Class="SearchAlgorithmsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск фильмов" Height="1225" Width="1591">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="5" 
                    TextChanged="SearchTextBox_TextChanged"/>
            <ComboBox x:Name="SearchTypeComboBox" Width="120" Margin="5"
                     SelectionChanged="SearchTypeComboBox_SelectionChanged">
                <ComboBoxItem>Линейный поиск</ComboBoxItem>
                <ComboBoxItem>Бинарный поиск</ComboBoxItem>
            </ComboBox>
            <Button Content="Найти" Click="SearchButton_Click" Margin="5" Width="60"/>
        </StackPanel>

        <!-- Результаты -->
        <TextBlock x:Name="ResultsTextBlock" Grid.Row="1" Margin="5" FontWeight="Bold"/>

        <!-- Список фильмов -->
        <ListView x:Name="MoviesListView" Grid.Row="2" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Режиссер" Width="150" DisplayMemberBinding="{Binding Director}"/>
                    <GridViewColumn Header="Год" Width="80" DisplayMemberBinding="{Binding ReleaseYear}"/>
                    <GridViewColumn Header="Рейтинг" Width="80" DisplayMemberBinding="{Binding Rating}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Информация -->
        <TextBlock Grid.Row="3" Text="Демонстрация алгоритмов поиска: линейный и бинарный" 
                   FontStyle="Italic" Margin="5"/>
    </Grid>
</Window>
